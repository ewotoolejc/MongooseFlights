<%- include('../partials/header') %>

<h2 id="flightsheader">Flights</h2>
 <table class="flightstable">
   <thead>
     <tr>
       <th>Airline</th>
       <th>Airport</th>
       <th>Flight #</th>
       <th>Departs</th>
     </tr>
   </thead>
   <tbody>
    <% function compareTime(flA, flB) { %>
      <% if (flA.departs < flB.departs) { %>
        <% return -1; } %>
        <% if (flA.departs > flB.departs) { %>
        <% return 1;} %>
        <% return 0;}; %>
    <% flights.sort(compareTime) %>
     <% flights.forEach(function(f) { %>
       <tr>
         <td><%= f.airline %></td>
         <td><%= f.airport %></td>
         <td><%= f.flightNo %></td>
         <td><%= f.departs %></td>
         <td><form action="/flights/<%= f._id %>"><button type="submit" id="fldeetsbutton">Dose Details</button></form></td>
       </tr>
    <% }); %>
   </tbody>
 </table> 

<%- include('../partials/footer') %>